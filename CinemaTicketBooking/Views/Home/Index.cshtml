@{
    ViewData["Title"] = "Home Page";
}
<head>
    <!-- Other head elements -->
    @Html.Partial("_Favicons")
</head>
<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/avengers-banner.jpg" alt="Avengers Banner" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    <kbd>Avengers: Endgame</kbd>
                    <a class="btn btn-primary small">
                        Book now
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/panther.jpg" alt="Avengers Banner" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    <kbd>Black Panther</kbd>
                    <a class="btn btn-primary small">
                        Book now
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/star-is-born.jpg" alt="Avengers Banner" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    <kbd>A Star Is Born</kbd>
                    <a class="btn btn-primary small">
                        Book now
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/windows.jpg" alt="Avengers Banner" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    <kbd>Widows</kbd>
                    <a class="btn btn-primary small">
                        Book now
                    </a>
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="container">
    <div class="well" style="margin-top:10px;">
        <div class="row">
            <div class="col-sm-2" style="margin-top:20px">
                <label for="sel1">Category:</label>
                <select class="form-control" asp-items="ViewBag.MovieGenreId"></select>
            </div>
            <div class="col-sm-2" style="margin-top:20px">
                <label for="sel1">Country:</label>
                <select class="form-control" asp-items="ViewBag.CountryId"></select>
            </div>
            <div class="col-sm-2" style="margin-top:20px">
                <label for="sel1">City:</label>
                <select class="form-control" asp-items="ViewBag.CityId"></select>
            </div>
            <div class="col-sm-2" style="margin-top:20px">
                <label for="sel1">Language:</label>
                <select class="form-control" asp-items="ViewBag.LanguageId"></select>
            </div>
            <div class="col-sm-2" style="margin-top:20px">
                <label for="sel1">Cinema:</label>
                <select class="form-control" asp-items="ViewBag.CinemaId"></select>
            </div>
            <div class="col-sm-2" style="margin-top:40px">
                <a role="button" class="btn btn-primary" asp-action="Details" asp-route-id="2">Filter Movies</a>
            </div>
        </div>
    </div>
</div>

<div class="row" style="padding: 15px;">
    @foreach (var item in ViewBag.ListOfMovies)
    {
        <div class="col-sm-6 col-md-3">
            <div class="thumbnail" width="220" height="242">
                <img width="220" height="242" src="@Url.Content("~/images/"+item.ImageNavigation.ImagePath)" class="img-responsive">
                <div class="caption">
                    <h3>@item.MovieName</h3>
                    <p>@item.MovieDescription</p>
                    <p><a class="btn btn-primary" role="button">Book now</a></p>
                </div>
            </div>
        </div>
    }
</div>
